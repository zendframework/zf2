    <section xml:id="zend.ldap.node.traversal"><title>ツリーの走査</title>
        

            <example><title>LDAPツリーを再帰的に走査</title>
            

            <programlisting language="php"><![CDATA[
$options = array(/* ... */);
$ldap = new Zend_Ldap($options);
$ldap->bind();
$ri = new RecursiveIteratorIterator($ldap->getBaseNode(),
                                    RecursiveIteratorIterator::SELF_FIRST);
foreach ($ri as $rdn => $n) {
    var_dump($n);
}
]]></programlisting>
